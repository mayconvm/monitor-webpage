{
  "manifest_version": 2,

  "name": "Analytics Page",
  "description": "Analytics Page.",
  "version": "0.0.1",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com https://cdn.firebase.com https://www.gstatic.com https://*.firebaseio.com; object-src 'self'",
  "options_page": "pages/options.html",
  "background": {
    "persistent": true,
    "scripts": [

      "js/libs/URI.js",
      "js/libs/firebase.js",
      "js/libs/lodash.min.js",
      "js/libs/moment.js",
      "js/libs/dexie.js",

      "js/Track/Tab.js",
      "js/PersistData.js",
      "js/MonitorTabs.js",

      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/ico/50x50.png"
  },
  "content_scripts" : [{
    "matches" : ["http://*/*", "https://*/*"],
    "js" : ["js/monitor.js"]
  }],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "identity",
    "identity.email",
    "background",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ] 
}
